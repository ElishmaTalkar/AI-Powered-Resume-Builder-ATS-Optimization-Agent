{
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/parse",
            "dest": "/api/index.py",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "src": "/score",
            "dest": "/api/index.py",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "src": "/enhance",
            "dest": "/api/index.py",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "src": "/chat",
            "dest": "/api/index.py",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "src": "/generate",
            "dest": "/api/index.py",
            "methods": [
                "POST",
                "OPTIONS"
            ]
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}